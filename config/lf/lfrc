# Basic Settings
set nopreview
set hidden true
set ignorecase true
set drawbox
# set icons true


# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd setwallpaper ${{
    xwallpaper --zoom "$f"
}}

# Image view
cmd viewimg ${{
    pkill -SIGINT feh
    feh --scale-down --auto-zoom "$f" &
    sleep 0.4
    xdotool key Alt+k
}}

cmd open ${{
    case "$f" in 
        *.jpg|*.jpeg|*.png) 
            pkill -SIGINT feh
            feh --scale-down --auto-zoom "$f" &
            sleep 0.4
            xdotool key Alt+k
            ;;
        *) $EDITOR "$f";;
    esac
}}

# favorites
cmd fave ${{
    cp "$f" ~/Pictures/Wallpapers/Favorites
}}

cmd rm_fave ${{
    rm ~/Pictures/Wallpapers/Favorites/"$f"
}}


# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd remove_dir ${{
    sudo rm -r "$f"
}}

cmd remove_file ${{
    rm "$f"
}}

# remove defaults
map m 
map o
map n
map "'"
map '"'
map d
map c
map e
map f
map r

# Basic Functions
map . set hidden!
map p paste
map x cut
map y copy
map <enter> open
map R reload

map rf remove_file 
map rd remove_dir 

map mf mkfile
map md mkdir

map bv viewimg
map bg setwallpaper
map bf fave
map br rm_fave

map gc cd ~/.config
map gS cd ~/.config/suckless
map gd cd ~/Downloads
map gD cd ~/Documents
map gr cd /
map gh cd ~/
map gp cd ~/Pictures
map gsc cd ~/.setup/config
map gss cd ~/.setup/system

map C clear
